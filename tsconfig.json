{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@olop/ng-translate": ["dist/translate"],
      "@olop/ng-with": ["dist/with"],
      "@olop/ng-attach": ["dist/attach"],
      "@olop/ng-scroll": ["dist/scroll"]
    }
  }
}
